<div class="row">
  <div class="col-md-12">
    <%= form_for([@play,@play.reviews.build], :html => {class: "form-horizontal", role: "form"}) do  |f| %>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :rating, "Rating" %>
        </div>
        <div class="col-md-11">
          <div id="rating-form">
            <%= f.text_field :rating, class: 'form-control', placeholder: 'Enter your rating', autofocus: true %>
          </div>
        </div>
      </div>

      
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :comment, "Review comment" %>
        </div>
        <div class="col-md-11">
          <%= f.text_area :comment, class: 'form-control', placeholder: 'Enter your review comment', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit class: 'btn-custom2' %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>